{
    "name": "krunkscript-hightlighter",
    "displayName": "KrunkScript Highlighter",
    "description": "A syntax highlighter for KrunkScript",
    "icon": "img/icon.png",
    "version": "1.0.2",
    "publisher": "Yendis",
    "author": "KPal81",
    "private": true,
    "license": "Proprietary",
    "repository": {
        "type": "git",
        "url": "https://github.com/kpal81xd/krunkscript-highlighter"
    },
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "krnk",
                "aliases": [
                    "KrunkScript",
                    "krnk"
                ],
                "extensions": [
                    ".krnk"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "krnk",
                "scopeName": "source.krnk",
                "path": "./syntaxes/krnk.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "build": "vsce package",
        "pub": "vsce publish"
    }
}
